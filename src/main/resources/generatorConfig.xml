<?xml version="1.0" encoding="UTF-8"?>    
<!DOCTYPE generatorConfiguration    
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"    
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">    
<generatorConfiguration>      
	<!-- 不使用maven时指定驱动位置 -->
   <!-- <classPathEntry  location="C:\Users\ling1\Desktop\test\mysql-connector-java-5.1.31.jar"/>    -->
    <context id="DB2Tables"  targetRuntime="MyBatis3" defaultModelType="flat">    
        <commentGenerator>    
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>    
        </commentGenerator>  
        <!-- 数据库连接配置 -->   
<jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://127.0.0.1:3306/baihui" userId="root" password="123">

</jdbcConnection>  
    <!--此处指定了自定义的数字类型转换-->  
    <javaTypeResolver type="com.custom.type.TypeResolver" >
      <property name="forceBigDecimals" value="false" />  
    </javaTypeResolver>
        <!-- 路径配置可使用相对路径，也可以使用绝对路径-->
        <!-- 生成pojo文件-->
        <javaModelGenerator targetPackage="com.domain" targetProject="D:\Study_Space\IntellJ IDEA_Space\mybatis-generator\src\main\java">
            <property name="enableSubPackages" value="true"/>    
            <property name="trimStrings" value="true"/>    
        </javaModelGenerator>
        <!-- 生成DAO接口xml映射文件-->
        <sqlMapGenerator targetPackage="com.mapping" targetProject="D:\Study_Space\IntellJ IDEA_Space\mybatis-generator\src\main\java">
            <property name="enableSubPackages" value="true"/>    
        </sqlMapGenerator>    
        <!-- 生成DAO接口-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.dao" targetProject="D:\Study_Space\IntellJ IDEA_Space\mybatis-generator\src\main\java">
            <property name="enableSubPackages" value="true"/>    
        </javaClientGenerator>    
        <!-- 使用通配符映射所有表-->    
        <table tableName="tb%" enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false">
		 <generatedKey column="id" sqlStatement="Mysql"/>
		 <!-- 使用正则表达式替换前缀 -->
		<domainObjectRenamingRule searchString="^Tb" replaceString="" />
		</table>
    </context>    
</generatorConfiguration>